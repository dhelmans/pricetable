<mvc:View
    controllerName="pricetable.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <Table
                id="priceTable"
                items="{/Products}"
                alternateRowColors="true"
            >
                <headerToolbar>
                    <OverflowToolbar id="ovToolbar">
                        <SearchField
                            id="filter"
                            placeholder="{i18n>productName}"
                            liveChange="onGetProduct"
                            showRefreshButton="true"
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column id="clmProdID">
                        <Text
                            id="txtProdID"
                            text="{i18n>productID}"
                        />
                    </Column>
                    <Column id="clmProdName">
                        <Text
                            id="txtProdName"
                            text="{i18n>productName}"
                        />
                    </Column>
                    <Column id="clmUnitP">
                        <Text
                            id="txtUnitP"
                            text="{i18n>unitPrice}"
                        />
                    </Column>
                    <Column id="clmUnitS">
                        <Text
                            id="txtUnitS"
                            text="{i18n>unitStock}"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="cliMain">
                        <cells>
                            <Text
                                id="valProdID"
                                text="{ProductID}"
                            />
                            <Text
                                id="valProdName"
                                text="{ProductName}"
                            />
                            <Text
                                id="valUnitP"
                                text="{UnitPrice}"
                            />
                            <Text
                                id="valUnitS"
                                text="{UnitsInStock}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
