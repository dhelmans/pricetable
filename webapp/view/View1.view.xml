<mvc:View
    controllerName="pricetable.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <SearchField id="filter"
                placeholder="Product Name"
                liveChange="onGetProduct"
                showRefreshButton="true"
            />
            
            <Table
                id="priceTable"
                items="{/Products}"
                alternateRowColors="true"
            >
                <headerToolbar>
                    <OverflowToolbar id="ovToolbar">
                        <Title
                        id="appTitle"
                            level="H3"
                            text="Filter"
                        />
                        <ToolbarSpacer id="spacer1" />
                        <Button id="btnAdd" icon="sap-icon://add" />
                        <Button id="btnDel" icon="sap-icon://delete" />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column id="clmProdID">
                        <Text id="txtProdID" text="Product ID" />
                    </Column>
                    <Column id="clmProdName">
                        <Text id="txtProdName" text="Product Name" />
                    </Column>
                    <Column id="clmUnitP">
                        <Text id="txtUnitP" text="Unit Price" />
                    </Column>
                    <Column id="clmUnitS">
                        <Text id="txtUnitS" text="Units in Stock" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="cliMain">
                        <cells>
                            <Text id="valProdID" text="{ProductID}" />
                            <Text id="valProdName" text="{ProductName}" />
                            <Text id="valUnitP" text="{UnitPrice}" />
                            <Text id="valUnitS" text="{UnitsInStock}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
